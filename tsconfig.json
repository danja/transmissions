{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "types": ["node"],
        "outDir": "./dist",
        "declaration": true
    },
    "include": [
        "src/**/*.js",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.js",
        "dist"
    ]
}