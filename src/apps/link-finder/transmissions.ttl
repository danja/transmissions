# src/apps/example-application/transmissions.ttl

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

@prefix : <http://purl.org/stuff/transmissions/> .

##################################################################
# Utility Processors : insert into pipe for debugging            #
#                                                                #
:SM a :ShowMessage . # verbose report, continues pipe            #
:SC a :ShowConfig . # verbose report, continues pipe             #
:DE a :DeadEnd . # ends the current pipe quietly                 #
:H  a :Halt . # kills everything                                 #
:N  a :NOP . # no operation (except for showing stage in pipe)   #
:UF a :Unfork . # collapses all pipes but one                    #
##################################################################

:linkFinder a :Transmission ;
    :pipe (:p10  :p20   :p30 :p40 :p50 :p60 :p70 :p72 :p75 :p80 :p90 :p100 :SM) .

:p10 a :FileReader ;
     :settings :origin .

:p20 a :MarkdownToLinks ;
     :settings :linksField .

:p30 a :ForEach ;
     :settings :listField .

:p40 a :Restructure ;
     :settings :retree .

:p50 a :HttpClient ;
     :settings :httpSettings .

:p60 a :ResourceMinter ;
     :settings :resourceMinterSettings .

:p70 a :Restructure ;
     :settings :retreeResponse .

:p72 a :URLNormalizer ;
     :settings :normalizeURL .

:p75 a :Restructure ;
     :settings :prepareSelect .

:p80 a :SPARQLSelect ;
     :settings :selectBookmark .

:p90 a :Choice ;
     :settings :replaceURI .

:p100 a :SPARQLUpdate ;
     :settings :updateBookmark .