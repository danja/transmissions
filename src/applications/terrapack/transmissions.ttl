@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <http://purl.org/stuff/transmissions/> .

#############################################################
# insert into pipe for debugging - one instance only like this
:DE a :DeadEnd . # ends the current pipe quietly
:H  a :Halt . # kills everything
:SC a :ShowConfig . # verbose report, continues pipe
:SM a :ShowMessage . # verbose report, continues pipe
:N  a :NOP . # no operation (except for showing stage in pipe)
:UF a :Unfork . # collapses all pipes but one
#############################################################

:terrapack a :Transmission ;
    rdfs:label "Repository terrapack" ;
    :pipe (
        :p10  # FileReader
        :p15  # ShowMessage
        :p20  # SetField (set fileSpec)
        :p25  # ShowMessage
        :p30  # FileLister
        :p35  # ShowMessage
        :p40  # FileFilter
        :p45  # ShowMessage
        :p50  # FileContentReader
        :p55  # ShowMessage
        :p60  # SetField (set content directly)
        :p62  # ShowMessage
        :p80  # Accumulate
        :p85  # Restructure
        :p90  # ShowMessage
        :p100 # SetField (set destinationFile)
        :p105 # SetField (set contentField)
        :p110 # FileWriter
    ) .

:p10 a :FileReader ;
     :settings [
          :sourceFile "input/files.spec.json" ;
          :mediaType "application/json" ;
          :targetField "fileSpec"
     ] .

:p15 a :ShowMessage ;
     :settings [ :message "After FileReader" ] .

:p20 a :Restructure ;
     :settings :shiftTarget .

:p25 a :ShowMessage ;
     :settings [ :message "After Restructure (shiftTarget)" ] .

:p30 a :DirWalker .

:p35 a :ShowMessage ;
     :settings [ :message "After DirWalker" ] .

:p40 a :FileFilter .

:p45 a :ShowMessage ;
     :settings [ :message "After FileFilter" ] .

:p50 a :FileReader ;
     :settings[
          :processWhenDone "true"
     ] .

:p55 a :ShowMessage ;
     :settings [ :message "After FileReader (content)" ] .

# Set content with file info directly
:p60 a :SetField ;
     :settings [
         :field "content" ;
         :value "---\nFile: Processed File\n---\n\nThis is the processed content.\n\n---"
     ] .

:p62 a :ShowMessage ;
     :settings [ :message "Content set directly with file info" ] .

# Accumulate processed content
:p80 a :Accumulate ;
     :settings :accumulator .

# Restructure to move accumulated content to the content field
:p85 a :Restructure ;
     :settings :accToContent .


:p90 a :ShowMessage ;
     :settings [ :message "After accumulating content" ] .

# Set the destination file
:p100 a :SetField ;
     :settings [
          :field "destinationFile" ;
          :value "terrapack-output.txt" ;
     ] .

:p105 a :SetField ;
     :settings [
          :field "contentField" ;
          :value "content" ;
     ] .

:p110 a :FileWriter ;
     :settings :fileWriterConfig .