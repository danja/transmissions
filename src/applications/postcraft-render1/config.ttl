@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .
@prefix trn: <http://purl.org/stuff/transmissions/> .
# @prefix trn: <http://purl.org/stuff/transmissions/> .
@prefix trn: <http://purl.org/stuff/transmissions/> . # for custom terms & instances
@prefix trn: <http://purl.org/stuff/transmissions/> .

trn:dirWalker a trn:ConfigSet ;
  trn:sourceDir "content-raw" ;
  trn:messageType schema:BlogPosting .

trn:templatePrep a trn:ReMap ;
    trn:rename (trn:tp1 ).
    trn:tp1   trn:pre     "content" ;
            trn:post    "contentBlocks.content" .


trn:contentTemplater a trn:ConfigSet ;
  trn:templateFilename "layouts/middlin/templates/entry-content_template.njk" .

trn:filesRename a trn:ConfigSet ;
  trn:inputField "filename" ;
  trn:outputField "filepath" ;
  trn:match ".md";
  trn:replace ".html".

trn:fileWriter a trn:ConfigSet ;
  trn:targetDir "cache" .



