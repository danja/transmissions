@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix trn: <http://purl.org/stuff/transmissions/> .
@prefix trn: <http://purl.org/stuff/transmissions/> .

trn:readConfig a trn:ServiceConfig ;
    rdfs:label "Read file" ;
    trn:configKey trn:readConfig ;
    trn:mediaType "text/plain" .

trn:filterConfig a trn:ServiceConfig ;
    rdfs:label "File filter config" ;
    trn:configKey trn:filterConfig ;
    trn:include "*.txt,*.md,*.js,*.jsx,*.ts,*.tsx,*.json,*.html,*.css" ;
    trn:exclude "node_modules/*,dist/*,build/*,.git/*,.DS_Store,.env,*.log,coverage/*,tmp/*,*.min.js,*.map,.cache/*,__pycache__/*,*.pyc,*.pyo,*.pyd,test-failures/*,yarn.lock,package-lock.json" .

trn:containerConfig a trn:ServiceConfig ;
    trn:configKey trn:containerConfig ;
    trn:destination "repomix.json" .

trn:writeConfig a trn:ServiceConfig ;
    rdfs:label "Write file" ;
    trn:configKey trn:writeConfig ;
    trn:destinationFile "repomix.json" .