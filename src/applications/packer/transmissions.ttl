@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix trn: <http://purl.org/stuff/transmissions/> .
@prefix : <http://purl.org/stuff/transmissions/> .

#############################################################
# insert into pipe for debugging
:DE a :DeadEnd . # ends the current pipe quietly
:H  a :Halt . # kills everything
:SC a :ShowConfig . # verbose report, continues pipe
:SM a :ShowMessage . # verbose report, continues pipe
:N  a :NOP . # no operation (except for showing stage in pipe)
:UF a :Unfork . # collapses all pipes but one
#############################################################
:packer a trn:Transmission ;
    rdfs:label "Repository Packer" ;
    trn:pipe (:p10 :p20 :p30 :p40 :p50 :p60 :p70 :SM :p80) .

:p10 a :DirWalker .

:p20 a :StringFilter ;
    trn:configKey :filterConfig .

:p30 a :FileReader ;
    trn:configKey :readConfig .

:p40 a :FileContainer ;
    trn:configKey :containerConfig .

:p50 a :CaptureAll .

:p60 a :WhiteboardToMessage .

:p70 a :Unfork .

:p80 a :FileWriter ;
    trn:configKey :writeConfig .