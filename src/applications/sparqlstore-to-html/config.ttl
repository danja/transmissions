:sparqlSelect a :ConfigSet ;
    :templateFilename "templates/select-articles.njk" ;
    :endpointSettings "endpoint.json" .

:resultIterator a :ConfigSet ;
  :forEach "queryResults.results.bindings" .

:prepArticle a :ConfigSet  ;
    :rename (:s1)  .
        :s1   :pre    "currentItem.title.value" ;
              :post "contentBlocks.title"  .
        :s2   :pre    "currentItem.content.value" ;
              :value  "contentBlocks.mdContent"  .

##############
:prepArghjghjticle a :ConfigSet ;
    :setters (:s1)  .
            :s1    :pre    "queryResults.results.bindings.title.value" ;
                    :value  "contentBlocks.title"  .
        :s2    :pre    "queryResults.results.bindings.content.value" ;
                    :value  "contentBlocks.mdContent"  .

:contentTemplater a :ConfigSet ;
  :templateFilename "templates/article-html.njk" .

:articleTemplater a :ConfigSet ;
  :templateFilename "templates/article-html.njk" .

