@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <http://purl.org/stuff/transmissions/> .

# Introduction Transmission for the Visual Editor

:introExample a :Transmission ;
    rdfs:label "Introduction Example" ;
    rdfs:comment "A simple transmission pipeline demonstrating the basics of transmissions" ;
    :pipe (:fileReader :markdownProcessor :fileWriter) .

:fileReader a :FileReader ;
    rdfs:comment "Reads a file into the message" ;
    :settings :fileReaderSettings .

:fileReaderSettings a :ConfigSet ;
    :sourceFile "input/intro.md" .

:markdownProcessor a :MarkdownToHTML ;
    rdfs:comment "Converts markdown to HTML" ;
    :settings :markdownSettings .

:markdownSettings a :ConfigSet ;
    :outputField "content" .

:fileWriter a :FileWriter ;
    rdfs:comment "Writes message content to a file" ;
    :settings :fileWriterSettings .

:fileWriterSettings a :ConfigSet ;
    :destinationFile "output/intro.html" .
