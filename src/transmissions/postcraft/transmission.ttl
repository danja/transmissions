@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix trm: <http://purl.org/stuff/transmission/> .
@prefix : <http://hyperdata.it/treadmill/> . # for custom terms & instances

:postcraft a trm:Pipeline ;
    trm:pipe (:s1 :s2 :s3 :s4 :s5 :s6 :s7 :s8 :s9) .

:s1 a :ContextReader .
:s2 a :PostcraftDispatcher .
:s3 a :FileReader . # the template
:s4 a :DirWalker .
:s5 a :FileReader . # the markdown content
:s6 a :PostcraftPrep . 
:s7 a :MarkdownToHTML .
:s8 a :Templater .
:s9 a :FileWriter .

